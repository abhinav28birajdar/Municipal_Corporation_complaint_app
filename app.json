{
  "expo": {
    "name": "Municipal Connect",
    "slug": "municipal-connect",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "municipal-connect",
    "userInterfaceStyle": "automatic",
    "sdkVersion": "52.0.0",
    "ios": {
      "supportsTablet": true,
      "newArchEnabled": true,
      "bundleIdentifier": "com.municipalconnect.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take photos for complaints and work updates.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to show nearby services and track complaint locations.",
        "NSMicrophoneUsageDescription": "This app uses microphone for voice recordings in complaints."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "newArchEnabled": true,
      "package": "com.municipalconnect.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "municipal-connect"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-router",
        {
          "origin": "municipal-connect://"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Municipal Connect to access your camera to take photos for complaints."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Municipal Connect to use your location to show nearby services."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {
        "origin": "municipal-connect://"
      },
      "eas": {
        "projectId": "your-project-id-here"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}